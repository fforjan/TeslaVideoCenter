<UserControl
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:v="clr-namespace:TeslaVideoCenter.Common.Views"
   mc:Ignorable="d"
   d:DesignWidth="800"
   d:DesignHeight="450"
   x:Class="TeslaVideoCenter.Common.Views.HintText">
  <UserControl.Styles>
    <Style
       Selector="TextBlock.HintTextBlock">
      <Setter
         Property="VerticalAlignment"
         Value="Center"/>
      <Setter
         Property="HorizontalAlignment"
         Value="Center"/>
      <Setter
         Property="FontStyle"
         Value="Italic"/>
      <Setter
         Property="Foreground"
         Value="{DynamicResource MaterialDesignBodyLight}"/>
    </Style>
  </UserControl.Styles>

  <TextBlock Classes="HintTextBlock" Text="{Binding $parent[v:HintText].Text}}" />
</UserControl>