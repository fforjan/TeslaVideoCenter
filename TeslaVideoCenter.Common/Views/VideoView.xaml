<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  xmlns:v="using:LibVLCSharp.Avalonia" x:Class="TeslaVideoCenter.Views.VideoView">
  <UserControl.Styles>
    <Style Selector="TextBlock.Part">
      <Setter Property="Foreground" Value="White"/>
    </Style>
  </UserControl.Styles>
  <v:VideoView Grid.Column="1" x:Name="VideoView">
    <StackPanel Orientation="Horizontal" x:Name="test" Spacing="5" VerticalAlignment="Bottom">
      <Button Content="PLAY" Height="25" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="PlayButton_Click" />
      <Button Content="STOP" Height="25" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="StopButton_Click" />
      <Button Content="Pause" Height="25" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="PauseButton_Click" />

      <TextBlock Classes="Part" x:Name="CurrentPart" VerticalAlignment="Center" />
    </StackPanel>
  </v:VideoView>
</UserControl>
