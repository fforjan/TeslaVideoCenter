<Window
     xmlns="https://github.com/avaloniaui"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:behaviors="clr-namespace:TeslaVideoCenter.Common.Views.Behaviors"
     xmlns:vm="clr-namespace:TeslaVideoCenter.Common.ViewModels"
     xmlns:v="clr-namespace:TeslaVideoCenter.Common.Views"
     xmlns:s="clr-namespace:TeslaVideoCenter.Common.Services"
     xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
     mc:Ignorable="d"
     d:DesignWidth="800"
     d:DesignHeight="450"
     x:Class="TeslaVideoCenter.Common.Views.MainWindow"
     Icon="/Assets/TeslaVideoCenter.ico"
     Title="Tesla Video Center">
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                 Width="250"/>
            <ColumnDefinition
                 Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                 Height="*"/>
            <RowDefinition
                 Height="40"/>
        </Grid.RowDefinitions>
        <styles:Card
             Margin="5"
             Padding="10"
             Grid.Column="0">
            <ListBox
                 Items="{Binding EventsViewModel.Events}"
                 Name="Events">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                             Orientation="Horizontal">
                            <TextBlock
                                 Margin="5"
                                 Text="{Binding Path=Event.City}"/>
                            <TextBlock
                                 Margin="5"
                                 Text="{Binding Path=Event.Date}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </styles:Card>
        <styles:Card
             Margin="5"
             Grid.Column="1">
            <TextBlock
                 Classes="HintTextBlock"
                 IsVisible="{Binding Path=!SelectedItem, ElementName=Events}"
                 Text="{behaviors:TranslateExtension HintNoSelectedEvent}"/>
        </styles:Card>
        <v:EventView
             IsVisible="{Binding Path=!!SelectedItem,ElementName=Events}"
             Grid.Column="1"
             DataContext="{Binding Path=SelectedItem,ElementName=Events}"/>
        <styles:Card
             Margin="5"
             Grid.Column="0"
             Grid.Row="1"
             Grid.ColumnSpan="2">
            <v:StatusBar/>
        </styles:Card>
    </Grid>
</Window>